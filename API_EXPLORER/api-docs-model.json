{
    "apiVersion": "1.0.0",
    "swaggerVersion": "1.2",
    "apis": [
        {
            "path": "/api/definition/auth",
            "description": "User authentication"
        },
        {
            "path": "/api/definition/users",
            "description": "User management operations"
        },
        {
            "path": "/api/definition/applications",
            "description": "Operations about applications"
        },
        {
            "path": "/api/definition/artifacts",
            "description": "Operations about artifacts"
        }

    ],
    "authorizations": {
        "oauth2":{
            "type":"oauth2",
            "scopes": [
                {
                    "scope": "write:applications",
                    "description": "Create and modify applications"
                },
                {
                    "scope": "read:applications",
                    "description": "Get applications"
                }
                ],
            "grantTypes":{
                "implicit":{
                    "loginEndPoint":{
                        "url:":"http://localhost:3000/login"
                    },
                    "tokenName":"access_token"

                }
            }
        }
    },
    "info": {
        "title": "Nectarine API Explorer",
        "description": "This is the specifications and testbed for Nectarine API. ",
        "termsOfServiceUrl": "http://helloreverb.com/terms/",
        "contact": "apiteam@wordnik.com",
        "license": "Apache 2.0",
        "licenseUrl": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "models": {
        "Error": {
            "id": "Error",
            "properties": {
                "status": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}